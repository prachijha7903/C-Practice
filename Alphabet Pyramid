#include<stdio.h>
int main() {
    int n;
    printf("Enter the Number: ");
    scanf("%d",&n);
    int nsp = n-1;
    int alpha_no = 1;
    for(int i=1; i<=n ; i++){
        for(int j=1; j<=nsp ; j++){
            printf(" ");
        }
        nsp--;
        for(int k=1; k<=alpha_no ; k++){
            printf("%c",k+64);
        }
        alpha_no = alpha_no + 2;
        printf("\n");
    }
    return 0;
}
