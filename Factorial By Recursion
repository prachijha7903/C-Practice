#include<stdio.h>
int fact(int n);

int main(){
    int n;
    printf("Enter the number whose factorial you want to find: ");
    scanf("%d",&n);
    int factorial = fact(n);
    printf("Factorial of %d is %d",n,factorial);
    return 0;
}
int fact(int n){
    if(n==0){
        return 1;
    }
    fact(n-1);
    int factorial = n * fact(n-1);
    return factorial;
}
