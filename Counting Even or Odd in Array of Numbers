#include<stdio.h>
int main(){
    int arr[5],even,odd;
    for(int i=0;i<5;i++){
         printf("Enter the %d index : ",i);
         scanf("%d",&arr[i]);
    }
    even = 0;
    odd = 0;
    for(int i=0;i<5;i++){
        if(arr[i]%2==0)   even++;
        else odd++;
    }
    printf("The total number of even number in array are %d\n",even);
    printf("The total number of odd number in array are %d\n",odd);
    return 0;
}
