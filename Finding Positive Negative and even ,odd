#include<stdio.h>
int main(){
    int n;
    printf("Enter the number: ");
    scanf("%d",&n);

  if(n>=0){
        printf("Your number %d is a positive number\n",n);
        if(n%2==0){
            printf("%d is Even number",n);
        }else{
            printf("%d is Odd number",n);
        }}
    else{
        printf("Negative number");
    }
    return 0;
}
