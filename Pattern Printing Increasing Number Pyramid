#include<stdio.h>  //Method 2
int main(){
    int n;
    printf("Enter the Number: ");
    scanf("%d",&n);
    int nsp=n-1;
    int no_ = 1;
    for(int i=1; i<=n ; i++){
        for(int j=1; j<=nsp ; j++){
            printf(" ");
        }
        nsp--;
        
  for(int k=1; k<=no_ ; k++){
            printf("%d",k); 
        }
    no_ = no_ + 2;
        printf("\n");

}
    return 0;
}
